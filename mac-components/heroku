fancy_echo "Installing Heroku CLI client ..."
  brew_install_or_upgrade 'heroku-toolbelt'

fancy_echo "Installing the heroku-con***REMOVED***g plugin to pull con***REMOVED***g variables locally to be used as ENV variables ..."
  heroku plugins:install git://github.com/ddollar/heroku-con***REMOVED***g.git

fancy_echo "Installing foreman ..."
  curl -sLo /tmp/foreman.pkg http://assets.foreman.io/foreman/foreman.pkg && \
  installer -pkg /tmp/foreman.pkg -tgt /
